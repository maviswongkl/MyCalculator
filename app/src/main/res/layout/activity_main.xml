<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- 4 columns -->

    <TextView
            android:id="@+id/tvResults"
            android:layout_column="1"
            android:paddingTop="100dp"
            android:textColor="#ffffff"
            android:background="#FF504347"
            android:layout_span="3"
            android:paddingBottom="100dp"
            android:gravity="center"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" android:layout_width="wrap_content"
            android:layout_weight="1" android:layout_height="wrap_content"/>
    <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/buttonClear"
                android:background="#D3D3D3"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:text="AC"/>
        <Button
                android:id="@+id/buttonAddSubtract"
                android:background="#D3D3D3"
                android:onClick="buttonOperationOnClick"
                android:layout_margin="1dp"
                android:text="+/-"/>
        <Button
                android:id="@+id/buttonPercent"
                android:background="#D3D3D3"
                android:onClick="buttonOperationOnClick"
                android:layout_margin="1dp"
                android:text="%"/>
        <Button
                android:id="@+id/buttonDivide"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:onClick="buttonOperationOnClick"
                android:layout_margin="1dp"
                android:background="#FF9800"
                android:text="/"/>
    </TableRow>
    <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/button7"
                android:background="#D3D3D3"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:text="7" />
        <Button
                android:id="@+id/button8"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="8" />
        <Button
                android:id="@+id/button9"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="9" />
        <Button
                android:id="@+id/buttonMultiply"
                android:background="#FF9800"
                android:layout_margin="1dp"
                android:onClick="buttonOperationOnClick"
                android:text="*"/>
    </TableRow>
    <TableRow
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/button4"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="4" />
        <Button
                android:id="@+id/button5"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="5" />
        <Button
                android:id="@+id/button6"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:onClick="btnOnClick"
                android:text="6" />
        <Button
                android:id="@+id/buttonSubtract"
                android:background="#FF9800"
                android:layout_margin="1dp"
                android:onClick="buttonOperationOnClick"
                android:text="-"/>
    </TableRow>
    <TableRow
            android:id="@+id/row4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/button1"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:background="#D3D3D3"
                android:text="1" />
        <Button
                android:id="@+id/button2"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:background="#D3D3D3"
                android:text="2" />
        <Button
                android:id="@+id/button3"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:background="#D3D3D3"
                android:text="3" />
        <Button
                android:id="@+id/buttonAdd"
                android:background="#FF9800"
                android:layout_margin="1dp"
                android:onClick="buttonOperationOnClick"
                android:text="+"/>
    </TableRow>
    <TableRow
            android:id="@+id/row5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        <Button
                android:id="@+id/button0"
                android:onClick="btnOnClick"
                android:background="#D3D3D3"
                android:layout_margin="1dp"
                android:layout_span="2"
                android:text="0"
                android:layout_width="wrap_content" android:layout_height="match_parent"/>
        <Button
                android:id="@+id/buttonDeci"
                android:onClick="btnOnClick"
                android:layout_margin="1dp"
                android:background="#D3D3D3"
                android:text="." />
        <Button
                android:id="@+id/buttonEqual"
                android:layout_margin="1dp"
                android:background="#FF9800"
                android:onClick="buttonOperationOnClick"
                android:text="=" />
    </TableRow>
</TableLayout>